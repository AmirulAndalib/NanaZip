<Page
  x:Class="NanaZip.AboutPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="using:NanaZip"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">
  <Grid
    Margin="0,16,16,16"
    HorizontalAlignment="Center"
    VerticalAlignment="Center">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="auto" />
      <ColumnDefinition Width="auto" />
    </Grid.ColumnDefinitions>
    <Image
      Width="256"
      Height="256"
      Source="ms-appx:///Assets/Square44x44Logo.targetsize-256.png" />
    <StackPanel Grid.Column="1" Margin="16,0">
      <TextBlock
        x:Name="Title"
        Margin="0,0,0,16"
        FontSize="32"
        FontWeight="Bold"
        TextWrapping="Wrap" />
      <TextBlock
        x:Name="Version"
        Margin="0,0,0,16"
        FontSize="24"
        TextWrapping="Wrap" />
      <TextBlock
        x:Name="Content"
        Margin="0,0,0,16"
        FontSize="16"
        TextWrapping="Wrap" />
      <TextBlock
        Margin="0,0,0,16"
        FontSize="16"
        TextWrapping="Wrap">
        <Hyperlink NavigateUri="https://github.com/M2Team/NanaZip">
          GitHub
        </Hyperlink>
      </TextBlock>
    </StackPanel>
  </Grid>
</Page>
